{
  "name": "@halo-dev/comment-widget",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/comment-widget-core.es.js",
  "module": "./dist/comment-widget-core.es.js",
  "unpkg": "./dist/comment-widget-core.umd.js",
  "jsdelivr": "./dist/comment-widget-core.umd.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only gen-types",
    "preview": "vite preview --port 4173",
    "test:unit": "vitest --environment jsdom",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint ./src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "gen-types": "tsc -d --emitDeclarationOnly && vue-typegen gen -s src -o dist"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/comment-widget-core.es.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "peerDependencies": {
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "vue-typegen": "^0.2.0"
  }
}
